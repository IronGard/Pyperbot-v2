            <origin rpy = "1.5708 1.5708 0" xyz = "0 -0.055 0"/>
            <geometry>
                <cylinder radius = "0.05" length = "0.185"/>
            </geometry>
        </collision>
    </link>
    <joint name = "second_joint" type = "continuous">
        <parent link  = "base_link"/>
        <child link = "second_link"/>
        <axis xyz = "0 1 0"/>
        <origin rpy = "0 0 0" xyz = "0 0.185 0"/>
    </joint>

    <!-- Third Joint -->
    <link name = "third_link">
        <visual>
            <origin rpy = "1.5708 1.5708 0" xyz = "0 -0.055 0"/>
            <geometry>
                <mesh filename = "package://snakebot_description/meshes/full_module.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = "white"/>
        </visual>
        <collision>
            <origin rpy = "1.5708 1.5708 0" xyz = "0 -0.05 0"/>
            <geometry>
                <cylinder radius = "0.05" length = "0.185"/>
            </geometry>
        </collision>
    </link>
    <joint name = "third_joint" type = "continuous">
        <parent link  = "second_link"/>
        <child link = "third_link"/>
        <axis xyz = "0 1 0"/>
        <origin rpy = "0 0 0" xyz = "0 0.185 0"/>
    </joint>

    <!-- Fourth Joint-->
    <link name = "fourth_link">
        <visual>
            <origin rpy = "1.5708 1.5708 0" xyz = "0 -0.055 0"/>
            <geometry>
                <mesh filename = "package://snakebot_description/meshes/full_module.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = "white"/>
        </visual>
        <collision>
            <origin rpy = "1.5708 1.5708 0" xyz = "0 -0.05 0"/>
