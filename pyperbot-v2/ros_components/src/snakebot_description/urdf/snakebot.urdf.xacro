<?xml version="1.0" encoding="UTF-8"?>

<robot xmlns:xacro = "http://www.ros.org/wiki/xacro" name = "snakebot">
    <material name = "white">
        <color rgba = "1 1 1 1"/>
    </material>

    <!-- First Joint -->

    <link name = "base_footprint"></link>
    <link name =  "base_link">
        <visual>
            <origin rpy = "1.5708 1.5708 0" xyz = "0 0 0"/>
            <geometry>
                <mesh filename = "package://snakebot_description/meshes/full_module.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = "white"/>
        </visual>
        <collision>
            <origin rpy = "1.5708 1.5708 0" xyz = "0 -0.055 0"/>
            <geometry>
                <cylinder radius = "0.05" length = "0.185"/>
            </geometry>
        </collision>
    </link>
    <joint name = "base_joint" type = "continuous">
        <parent link = "base_footprint"/>
        <child link = "base_link"/>
        <axis xyz = "0 0.5 0.5"/>
        <origin rpy = "0 0 0" xyz = "0 0 0"/>
    </joint>

    <!-- Second Joint -->
    <link name = "second_link">
