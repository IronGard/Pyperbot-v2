    </link>
    <joint name = "fourth_joint" type = "continuous">
        <parent link  = "third_link"/>
        <child link = "fourth_link"/>
        <axis xyz = "0 1 0"/>
        <origin rpy = "0 0 0" xyz = "0 0.185 0"/>
    </joint>

</robot>