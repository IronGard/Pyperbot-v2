<?xml version="1.0" encoding="UTF-8"?>

<robot xmlns:xacro = "http://www.ros.org/wiki/xacro" name = "snakebot">
    <material name = "white">
        <color rgba = "1 1 1 1"/>
    </material>
    <link name = "base_footprint"></link>
    <link name =  "base_link">
        <visual>
            <origin rpy = "0.785 0 0" xyz = "0 0 0"/>
            <geometry>
                <mesh filename = "package://snakebot_description/meshes/full_module.stl"/>
            </geometry>
        </visual>
    </link>
    <joint name = "base_joint" type = "continuous">
        <parent link = "base_footprint"/>
        <child link = "base_link"/>
        <axis xyz = "0 0.5 0.5"/>
        <origin rpy = "0 0 0" xyz = "0 0 0"/>
    </joint>
    <link name = "second_link">
        <visual>
            <origin rpy = "0.785 0 0" xyz = "0 0 0"/>
            <geometry>
                <mesh filename = "package://snakebot_description/meshes/full_module.stl"/>
            </geometry>
        </visual>
    </link>
    <joint name = "second_joint" type = "continuous">
        <parent link  = "base_link"/>
        <child link = "second_link"/>
        <axis xyz = "0 0.5 0.5"/>
        <origin rpy = "0 0 0" xyz = "0 130 -130"/>
    </joint>
    <link name = "third_link">
        <visual>
            <origin rpy = "0.785 0 0" xyz = "0 0 0"/>
            <geometry>
                <mesh filename = "package://snakebot_description/meshes/full_module.stl"/>
            </geometry>
        </visual>
    </link>
    <joint name = "third_joint" type = "continuous">
        <parent link  = "second_link"/>
        <child link = "third_link"/>
        <axis xyz = "0 0.5 0.5"/>
        <origin rpy = "0 0 0" xyz = "0 130 -130"/>
    </joint>
    <link name = "fourth_link">
        <visual>
            <origin rpy = "0.785 0 0" xyz = "0 0 0"/>
            <geometry>
                <mesh filename = "package://snakebot_description/meshes/full_module.stl"/>
            </geometry>
        </visual>
    </link>
    <joint name = "fourth_joint" type = "continuous">
        <parent link  = "third_link"/>
        <child link = "fourth_link"/>
        <axis xyz = "0 0.5 0.5"/>
        <origin rpy = "0 0 0" xyz = "0 130 -130"/>
    </joint>

</robot>